   10 REM > RAMMER
   20 
   30 MODE13:OFF
   40 FORM%=1TO500
   50 C%=RND(27)-1
   60 X%=RND(1152):Y%=RND(896)
   70 B%=RND(1152-X%)+128:H%=RND(896-Y%)+128
   80 FORN%=0TO14:I%=7-ABS(7-N%):PROCF(C%,I%):K%=4*N%
   90 RECTANGLE X%+K%,Y%+K%,B%-2*K%,H%-2*K%
  100 NEXT,:ON:END
  110 
  120 DEFPROCF(F%,I%)
  130 LOCAL R%,G%,B%
  140 B%=F%DIV9:F%=F%-9*B%
  150 G%=F%DIV3:F%=F%-3*G%
  160 R%=F%
  170 F%=R%+4*G%+16*B%
  180 IF I%>=4 F%=F%+&15
  190 GCOL F% TINT (64*I%)MOD256
  200 ENDPROC
