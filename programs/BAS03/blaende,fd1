   10 REM > BLAENDE
   20 
   30 MODE128:MODE0:OFF
   40 SYS"OS_UpdateMEMC",64,64
   50 S1$="1":S2$="2":F=2*PI/3:Z%=35:K%=15:S%=360/K%
   60 DIM X%(S%),Y%(S%),A%(S%)
   70 FORN%=1TOS%:T=RAD(K%*N%)
   80 X%(N%)=664+260*SINT:Y%(N%)=512+260*COST:A%(N%)=K%*N%
   90 NEXT
  100 
