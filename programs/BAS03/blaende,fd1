  120 REPEAT
  130 OSCLI"FX112,"+S1$:OSCLI"FX113,"+S2$:WAIT:CLS:SWAP S1$,S2$
  140 A%()+=2:FORN%=1TOS%:T1=RAD(A%(N%))
  150 X1=X%(N%)+Z%*SINT1:Y1=Y%(N%)+Z%*COST1:MOVE X1,Y1
  160 T1+=F:DRAW X%(N%)+Z%*SINT1,Y%(N%)+Z%*COST1
