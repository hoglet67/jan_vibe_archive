  840 DATA 15,4,0, 13,11,5, 13,11,-5, 12,16,-5, 12,16,0, 12,16,5
  850 DATA 11,20,-3, 11,20,3
  860 
  870 DATA H,8,41
  880 DATA 3,3,0, 3,9,0, 3,15,0, 18,20,0, 18,25,-5, 18,25,5
  890 DATA 3,31,0,3,37,0
  900 
  910 DATA I,1,7
  920 DATA 3,3,0
  930 
  940 DATA J,7,43
  950 DATA 3,3,0, 3,9,0, 3,15,0, 3,21,0, 3,27,0, 3,33,0, 3,39,0
  960 
  970 DATA K,1,7
  980 DATA 7,3,0
  990 
 1000 DATA L,2,19
 1010 DATA 3,3,0, 5,12,0
 1020 
 1030 DATA M,3,25
 1040 DATA 3,3,0, 3,9,0, 5,18,0
 1050 
 1060 DATA N,4,23
 1070 DATA 2,2,-3, 2,2,3, 3,7,0, 5,16,0
 1080 
 1090 DATA O,6,31
 1100 DATA 2,2,3, 2,6,3, 2,10,3, 8,6,-4, 3,15,0, 5,24,0
 1110 
 1120 DATA P,2,15
 1130 DATA 3,3,0, 4,10,4
