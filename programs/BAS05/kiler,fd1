 1150 DATA Q,4,13
 1160 DATA 9,2,-2, 9,5,1, 9,8,4, 10,10,-4
 1170 
 1180 DATA R,2,20
 1190 DATA 3,3,0, 5,13,3
 1200 
 1210 DATA S,5,32
 1220 DATA 7,3,0, 7,9,0, 3,15,0, 5,25,3, 2,25,-3
 1230 
 1240 DATA T,10,19
 1250 DATA 7,3,0, 1,8,-4, 1,8,0, 1,8,4, 1,12,-4,1,12,0, 1,12,4
 1260 DATA 1,16,-4, 1,16,0, 1,16,4
 1270 
 1280 DATA U,3,25
 1290 DATA 7,3,0, 3,9,0, 5,18,0
 1300 
 1310 DATA V,15,79
 1320 DATA 7,3,0, 7,9,0, 7,15,0, 7,21,0, 2,26,3, 2,30,3, 2,34,3
 1330 DATA 2,28,-3, 2,32,-3, 7,39,0, 3,45,0, 5,54,0, 3,63,0
 1340 DATA 7,69,0, 7,75,0
 1350 
 1360 DATA X,2,9
 1370 DATA 9,3,-2, 9,6,2
 1380 
 1390 DATA Y,5,28
 1400 DATA 3,3,0, 9,9,-2, 9,12,2, 3,18,0, 3,24,0
 1410 
 1420 DATA Z,2,14
 1430 DATA 17,6,0, 5,6,0
 1440 
 1450 ENDPROC
 1460 
 1470 DEFPROCK(X%,Y%,T%)
 1480 LOCAL T$,R$,K%,N%,P%,PX%,PY%,C%
 1490 T$="'"+STR$(T%)+"'"
 1500 RESTORE 1610
 1510 REPEAT
 1520   READ R$
 1530 UNTIL R$=T$
 1540 READ K%
 1550 
 1560 FORN%=1TOK%:READ P%,PX%,PY%,C%
 1570 GCOLC%
 1580 PLOTP%,X%+Z%*PX%,Y%+Z%*PY%
 1590 NEXT
