   10 REM > STRANGE
   20 
   30 MODE0:OFF
   40 REPEAT:CLS
   50 X=RND(1):Y=RND(1):T1=0:T2=0:T=TIME+2000
   60 Z1=SGN(RND(1)-.5)*RND(1)/RND(1E3)
   70 Z2=SGN(RND(1)-.5)*RND(1)/RND(1E3)
   80 ONERRORGOTO200
   90 REPEAT
  100 T1=T1+Z1:T2=T2+Z2
  110 
  120 Y=SQRABS(X-Y+T1)
  130 X=SQRABS(Y-X+T2)
  140 
  150 X=ABS(X-INTX):Y=ABS(Y-INTY)
  160 POINT 1280*X,1024*Y
  170 UNTILTIME>T OR INKEY$(0)<>""
  180 UNTIL0
  190 
  200 IF ERR=18 OR ERR=20 OR ERR=21 RUN
  210 REPORT:PRINT" at line "STR$ERL
