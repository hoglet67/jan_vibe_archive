   10 REM > TRAVELJV
   20 
   30 MODE159:MODE31:OFF
   40 S1%=1:S2%=2:K%=50:F=1.08:G=0.4
   50 FORN%=0TO15:READ R%,G%,B%:COLOURN%,R%,G%,B%:NEXT
   60 DIM X(K%),Y(K%),R(K%),S$(K%)
   70 
   80 SPF$="JVI"
   90 
  100 SYS"OS_FSControl",28,SPF$ TO ,,LG%:LG%+=32
  110 DIM SPR LG%,BUF 16
  120 SPR!0=LG%:SPR!4=0:SPR!8=16:SPR!12=16
  130 SYS"OS_SpriteOp",256+10,SPR,SPF$
  140 SYS"OS_SpriteOp",256+8,SPR TO ,,,A%
  150 DIM L$(A%):D%=12:F%=100/D%
  160 FOR N%=1TOA%
  170 SYS"OS_SpriteOp",256+13,SPR,BUF,16,N%
  180 N$="":P%=0:REPEAT
  190 T%=BUF?P%:IF T%<>0 L$(N%)+=CHR$T%
  200 P%+=1:UNTIL T%=0
  210 NEXT:AS%=N%-1
  220 
  230 BUF!00=10:BUF!08=20
  240 BUF!04=10:BUF!12=20
  250 
  260 FORN%=1TOK%
  270 REPEAT:X(N%)=RND(1600)-800:UNTILX(N%)<>0
  280 REPEAT:Y(N%)=RND(1200)-600:UNTILY(N%)<>0
  290 R(N%)=RND(1)
  310 S$(N%)=L$(1)
  320 SYS"OS_SpriteOp",256+40,SPR,S$(N%) TO ,,,W%,H%,,M%
  340 NEXT
  350 
  360 COLOUR135
  370 ONERRORGOTO800
  380 REPEAT
  390 SYS 6,112,S1%:SYS 6,113,S2%:WAIT:CLS:SWAP S1%,S2%
  400 FORN%=1TOK%
  410 SYS"OS_SpriteOp",256+40,SPR,S$(N%) TO ,,,W%,H%
  420 X(N%)=F*X(N%):Y(N%)=F*Y(N%):R(N%)=G+R(N%)
  430 BUF!00=R(N%):BUF!04=R(N%):S=R(N%)/10
  440 DX%=X(N%)-W%*S+800:DY%=Y(N%)-H%*S+600
  450 SYS"OS_SpriteOp",256+52,SPR,S$(N%),DX%,DY%,8,BUF
  451 CIRCLE DX%,DY%,8
  460 NEXT
  470 
  480 FORN%=1TOK%
  490 IF ABS(X(N%))>800 OR ABS(Y(N%))>600 THEN
  500 FORI%=N%TO2STEP-1:J%=I%-1:X(I%)=X(J%):Y(I%)=Y(J%):R(I%)=R(J%):S$(I%)=S$(J%):NEXT
  510 REPEAT:X(1)=RND(1600)-800:UNTILX(1)<>0
  520 REPEAT:Y(1)=RND(1200)-600:UNTILY(1)<>0
  530 R(1)=RND(1)
  550 S$(1)=L$(1)
  560 SYS"OS_SpriteOp",256+40,SPR,S$(1) TO ,,,W%,H%,,M%
  580 ENDIF
  590 NEXT
  600 WAIT
  610 UNTIL0
  620 
