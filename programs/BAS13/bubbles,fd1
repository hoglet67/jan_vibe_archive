   10 REM > BUBBLES
   20 
   30 DIM MD% 64:MD%!00=1:MD%!04=800:MD%!08=600:MD%!12=5:MD%!16=-1:MD%!20=-1:MODE MD%:OFF
   40 REPEAT
   50 RC%=RND(255):GC%=RND(255):BC%=RND(255)
   60 R%=RND(50)+10:R2%=R%*R%:R3%=R%/2:R4%=SQR(2*R3%^2)+R%+5
   70 PX%=RND(1600-2*R%)+R%:PY%=RND(1200-2*R%)+R%
   80 FORY%=-R%TOR%STEP2:W%=SQR(R2%-Y%*Y%)
   90 FORX%=-W%TOW%STEP2
  100 D=1-SQR((X%-R3%)^2+(Y%-R3%)^2)/R4%:GCOL RC%*D,GC%*D,BC%*D
  110 POINT X%+PX%,Y%+PY%
  120 NEXT,
  130 UNTIL0
