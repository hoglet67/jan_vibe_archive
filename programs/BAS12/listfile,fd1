   10 REM > LISTFILES
   20 
   30 DIM NAME% &100
   40 
   50 SEQ%=0
   60 REPEAT
   70 SYS "OS_GBPB",8,,NAME%,1,SEQ% TO ,,,NUM%,SEQ%
   80 IF NUM%=0 THEN
   90 NAME%?(1+?NAME%)=13:NAME$=$(NAME%+1)
  100 SYS "OS_File",5,NAME$ TO FOU%,,TYPE%
  110 TYPE%=TYPE%>>8:TYPE%=TYPE%AND&FFF
  120 IF FOU%=1 PRINTNAME$,TYPE%
  130 ENDIF
  140 UNTIL NUM%
