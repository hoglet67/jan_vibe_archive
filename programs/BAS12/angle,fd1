   10 REM > ANGLE
   20 
   30 MODE31:OFF
   40 *POINTER
   50 MOUSETO 100,100
   60 XC=800:YC=600:XE=XC:YE=YC
   70 REPEAT
   80 MOUSE X,Y,B
  100 XE=X-XC:YE=Y-YC:D=SQR(XE^2+YE^2):XE=XE/D:YE=YE/D:SI=DEGASN(XE)
  150 IF YE<=0 SI=180-SI ELSE SI=360+SI
  160 IF SI>360 SI=SI-360
  170 
  190 CLS:LINE 800,600,400*XE+800,400*YE+600:VDU30:PRINTSI
  200 UNTIL0
