   10 REM > COLINT
   20 
   30 MODE107:OFF
   40 FORN%=0TO359:T=RADN%:SI=SINT:CO=COST
   50 TR=T:TG=RAD(N%+120):TB=RAD(N%+240)
   60 FORM%=0TO424STEP6
   70 R%=(SIN(TR)+1)*.212*M%
   80 G%=(SIN(TG)+1)*.212*M%
   90 B%=(SIN(TB)+1)*.212*M%
  100 PROCRGB(R%,G%,B%)
  110 CIRCLE FILL 576+M%*SI,424+M%*CO,6
  120 NEXT,
  130 END
  140 
  150 DEFPROCRGB(R%,G%,B%)
  160 LOCAL C%:C%=(R%<<8)+(G%<<16)+(B%<<24)
  170 SYS "ColourTrans_SetGCOL",C%,,,&100,0
  180 ENDPROC
