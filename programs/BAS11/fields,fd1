   10 REM > FIELDS
   20 
   30 MODE29:OFF:K%=12:L%=2*K%
   40 REPEAT:CLS
   50 PX1%=RND(1600):PY1%=RND(1200):PX2%=RND(1600):PY2%=RND(1200)
   60 FORY%=0TO1200STEPK%:FORX%=0TO1600STEPK%
   70 DX1=X%-PX1%:DY1=Y%-PY1%:D1=SQR(DX1^2+DY1^2):X1=L%*DX1/D1+X%:Y1=L%*DY1/D1+Y%
   80 DX2=X%-PX2%:DY2=Y%-PY2%:D2=SQR(DX2^2+DY2^2):X2=L%*DX2/D2+X%:Y2=L%*DY2/D2+Y%
   90 X3=X1*(1-D1/(D1+D2))+X2*(1-D2/(D1+D2)):Y3=Y1*(1-D1/(D1+D2))+Y2*(1-D2/(D1+D2))
  110 LINE X%,Y%,X3,Y3
  120 NEXT,:Q=INKEY(1000):UNTIL0
