   10 REM > INFERNO
   20 
   30 MODE27:OFF:PROCT
   40 FORN%=0TO1280STEP2:GCOLRND(15):POINT N%,0:NEXT
   50 FORY%=2TO960STEP2:FORX%=0TO1280STEP2
   60 R%=2*(RND(3)-2):C%=ABS(POINT(X%+R%,Y%-2)):IF RND(1)>.8 C%=C%MOD15+1
   70 GCOLC%:POINT X%,Y%:PROCT:NEXT,
   80 REPEAT:PROCT:UNTIL0
   90 
  100 DEFPROCT
  110 IF TIME>T% THEN
  120 LOCAL F%:S%=S%MOD15+1
  130 FORN%=1TO15:F%=(S%+N%)MOD15+1:COLOURF%,255,16*N%,0:NEXT
  140 T%=TIME+5
  150 ENDIF
  160 ENDPROC
