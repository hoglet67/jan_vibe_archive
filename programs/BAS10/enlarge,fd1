   10 REM > ENLARGE
   20 
   30 MODE13:OFF
   40 DIM SPR &20000,SC 16
   50 SPR!0=&1FFFF:SPR!4=0:SPR!8=16:SPR!12=16
   60 
   70 T%=100:N%=90:DX=(1280-1280*T%/N%)/2:DY=(1024-1024*T%/N%)/2
   80 SC!00=T%:SC!04=T%:SC!08=N%:SC!12=N%
   90 C%=0:*POINTER
  100 
  110 REPEAT
  120 MOUSE X%,Y%,B%:IF B%<>0 C%=(C%+1)MOD64:GCOL C%:CIRCLE FILL X%,Y%,32
  130 SYS"OS_SpriteOp",256+16,SPR,"SCR",0,0,0,1279,1024
  140 SYS"OS_SpriteOp",256+52,SPR,"SCR",DX,DY,0,SC
  150 UNTIL0
