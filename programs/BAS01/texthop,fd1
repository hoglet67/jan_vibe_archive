   10 REM > TEXTHOP
   20 MODE0:OFF
   30 INPUT"TEKST="A$:B%=80-LENA$
   40 X%=0:Y%=30:DX%=1:DY%=-1:C%=8
   50 FORN%=1TO8:C$=STR$N%
   60 OSCLI"FX112,"+C$:OSCLI"FX113,"+C$
   70 CLS:NEXT
   80 REPEAT
   90 C%=C%MOD8+1:C$=STR$C%
  100 OSCLI"FX112,"+C$:OSCLI"FX113,"+C$
  110 WAIT:VDU31,X%,Y%:PRINTA$;
  120 X1%=X%+DX%:IF X1%>B% OR X1%<0 DX%=-DX%
  130 Y1%=Y%+DY%:IF Y1%>30 OR Y1%<0 DY%=-DY%
  140 X%=X%+DX%:Y%=Y%+DY%
  150 UNTIL0
