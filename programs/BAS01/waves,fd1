   10 REM > WAVES
   20 MODE12:ORIGIN 640,512:OFF:*FX10
   30 FORN%=1TO360:T=RADN%:K=10:SI=SINT:CO=COST
   40 C%=7.5*(COSRAD(10*N%)+1):X=0:Y=0:MOVEX,Y
   50 REPEAT:C%=C%MOD15+1:GCOL C%:K=K-.1:DX=K*SI:DY=K*CO
   60 X=X+DX:Y=Y+DY:DRAW X,Y:UNTILK<=0:NEXT
   70 C1%=1:C2%=9:REPEAT:C1%=C1%MOD15+1:C2%=C2%MOD15+1
   80 WAIT:COLOUR C1%,255,255,255:COLOUR C2%,0,0,0:UNTIL0
