   10 REM >DRAGON
   20 SYS "OS_UpdateMEMC",64,64
   30 S%=4
   40 MODE15
   50 OFF
   60 ORIGIN 640,512
   70 REPEAT
   80 J=10*(RND(1)-.5):K=10*(RND(1)-.5)
   90 CLS
  100 X=0
  110 Y=0
  120 REPEAT
  130 GCOL RND(63) TINT RND(250)
  140 FOR I%= 1 TO 2000
  150 XX=Y+SIN(K*X-1)
  160 Y=J-X
  170 X=XX
  180 IF I%MOD2 THEN POINT X*S%,Y*S%
  190 IF INKEY(-99) THEN I%=5000
  200 NEXT
  210 UNTIL INKEY(-99)
  220 UNTIL 0
