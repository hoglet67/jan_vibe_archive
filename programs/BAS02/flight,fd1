   10 REM > FLIGHT
   20 
   30 MODE0:OFF
   40 FORI%=1TO8:C$=STR$(I%)
   50 OSCLI"FX112,"+C$:CLS
   60 FORN%=10TO1STEP-1:Z%=4*N%
   70 FORY%=16*I%-128TO1152STEP128
   80 FORX%=16*I%-128TO1408STEP128
   90 GX=(8-N%)*(X%-640)/30
  100 GY=(8-N%)*(Y%-512)/30
  110 GCOL0:CIRCLE FILL X%+GX,Y%+GY,Z%
  120 GCOL1:CIRCLE X%+GX,Y%+GY,Z%
  130 NEXT,,,
  140 
  150 REPEAT
  160 FORI%=8TO1STEP-1:C$=STR$(I%)
  170 OSCLI"FX112,"+C$:OSCLI"FX113,"+C$:WAIT
  180 NEXT
  190 UNTIL0
