   10 REM > DRAGON
   20 
   30 MODE0:OFF
   40 PROCA(640,512,260,45)
   50 END
   60 
   70 DEFPROCA(X,Y,Z,A)
   90 LOCAL X1,Y1,N%
  100 POINT X,Y
  110 IF Z>=2 THEN
  120   FORN%=0TO1
  130     X1=X+Z*SINRAD(180*N%+A)
  140     Y1=Y+Z*COSRAD(180*N%+A)
  150     PROCA(X1,Y1,Z/1.41,A+45)
  160   NEXT
  170 ENDIF
  180 ENDPROC
