   10 REM > SPIRAL
   20 
   30 SYS"OS_UpdateMEMC",64,64
   40 MODE0:OFF:ORIGIN 640,512
   50 S1%=1:S2%=2:F=PI/4:R=0:A=0
   60 FORN%=1TO8:SYS 6,112,S1%:SYS 6,113,S2%:CLS
   70 S1%=S1%MOD8+1:S2%=S2%MOD8+1:NEXT
   80 
   90 ONERRORGOTO150
  100 REPEAT
  110 SYS 6,112,S1%:SYS 6,113,S2%:WAIT:S1%=S1%MOD8+1:S2%=S2%MOD8+1
  120 R+=.04:A+=RAD(360/(F*R)):POINT R*SINA,R*COSA
  130 UNTIL0
  140 
  150 SYS 6,112,S1%:REPORT:PRINT" at line "STR$ERL:ON
