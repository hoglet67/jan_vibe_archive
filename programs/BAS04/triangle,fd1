  180 FORN%=1TOZ%:GCOLN%
  190 FORM%=1TO3:A%(M%,N%)=(A%(M%,N%)+DA%(M%,N%))MOD360:NEXT
  200 H%=X%(N%)+DX%(N%):IF H%<K%ORH%>LX% DX%(N%)=(RND(17)+3)*SGN(-DX%(N%))
  210 H%=Y%(N%)+DY%(N%):IF H%<K%ORH%>LY% DY%(N%)=(RND(17)+3)*SGN(-DY%(N%))
  220 X%(N%)+=DX%(N%):Y%(N%)+=DY%(N%)
  230 T=RADA%(1,N%):MOVEX%(N%)+K%*SINT,Y%(N%)+K%*COST
  240 T=RADA%(2,N%):MOVEX%(N%)+K%*SINT,Y%(N%)+K%*COST
  250 T=RADA%(3,N%):PLOT85,X%(N%)+K%*SINT,Y%(N%)+K%*COST
  260 NEXT
