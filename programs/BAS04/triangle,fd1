   40 SYS"OS_UpdateMEMC",64,64
   50 S1%=1:S2%=2:Z%=15:K%=64:LX%=1279-K%:LY%=1023-K%
   60 DIM X%(Z%),Y%(Z%),A%(3,Z%),DX%(Z%),DY%(Z%),DA%(3,Z%)
   70 COLOUR0,64,64,64:VDU19,0,24,64,64,64
   80 FORN%=1TOZ%
   90 REPEAT C1%=RND(255):C2%=RND(255):C3%=RND(255):UNTIL C1%+C2%+C3%>255
  100 COLOUR N%,C1%,C2%,C3%:X%(N%)=640:Y%(N%)=512
  110 FORM%=1TO3:A%(M%,N%)=RND(360):DA%(M%,N%)=(RND(7)+3)*SGN(RND(1)-.5):NEXT
  120 DX%(N%)=(RND(13)+3)*SGN(RND(1)-.5):DY%(N%)=(RND(13)+3)*SGN(RND(1)-.5)
  130 NEXT
