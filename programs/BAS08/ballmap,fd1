   10 REM > BALLMAP
   20 
   30 MODE15:OFF
   40 DIM SPR &1000,F% 16
   50 SPR!0=&FFF:SPR!4=0:SPR!8=16:SPR!12=16
   60 F%!00=1280:F%!04=1280:F%!08=1280:F%!12=1280
   70 FORN%=1TO1000:GCOLRND(63)
   80 CIRCLE FILL RND(1280),RND(1024),24+RND(76):NEXT:GCOL0TINT0
   90 FORN%=0TO1023STEP4:X1%=0:Y1%=N%:X2%=1279:Y2%=N%
  100 W%=SQR(262144-(512-N%)^2):F%!00=2*W%
  110 SYS"OS_SpriteOp",256+16,SPR,"LINE",0,X1%,Y1%,X2%,Y2%
  120 MOVE0,N%:DRAW1280,N%
  130 SYS"OS_SpriteOp",256+52,SPR,"LINE",640-W%,N%,0,F%,0
