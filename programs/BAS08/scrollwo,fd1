   10 REM > SCROLLWORK
   20 
   30 MODE0:OFF
   40 FOR N%=132TO1280STEP110:PROCA(N%,0,26,0,.98,10,-1):NEXT
   50 END
   60 
   70 DEFPROCA(X,Y,L,A,D1,D2,S%)
   80 LOCAL X1,Y1
   90 X1=X+L*SINRADA:Y1=Y+L*COSRADA:LINE X,Y,X1,Y1
  100 IF L<=2 ENDPROC
  110 IF ABS(A)MOD180=60 THEN S%=-S%
  120 PROCA(X1,Y1,L*D1,A+S%*D2,D1,D2,S%)
  130 IF ABS(A)MOD60=0 PROCA(X1,Y1,L*D1/1.8,A+S%*D2,.96,15,S%)
  140 ENDPROC
